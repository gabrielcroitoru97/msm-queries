<h1>Director #<%= @the_id%> details</h1>
<a href="/directors">Go back</a>
<hr>
<dt>Name</dt>
<dd><%= @the_name%></dd>
<dt>Dob</dt>
<dd><%= @the_dob%></dd>
<dt>Bio</dt>
<dd><%= @the_bio%></dd>
<dt>Image</dt>
<dd><img src="<%= @the_image%>" style ="width: 250px"></dd>
<dt>Created at</dt>
<dd><%= @created%></dd>
<dt>Updated at</dt>
<dd><%= @updated%></dd>
<hr>
<h2>Filmography</h2>

<table border = 1>
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
</tr>

  <% Movie.where({ :director_id => @the_director.id}).each do |a_movie| %>
    <tr>
      <td><%= a_movie.id %></td>
      <td><img src="<%= a_movie.image %>" style ="width: 250px"></td>
      <td><%= a_movie.title %></td>
      <td><%= a_movie.year %></td>
      <td><%= @the_name %></td>
      <td><a href= "/directors/<%= a_movie.id %>"> Show Details </a></td>
    </tr>
  <% end %>
</table>

